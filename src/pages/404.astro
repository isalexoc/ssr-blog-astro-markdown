---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-4xl font-bold mt-8">Page not found</h1>
    <p class="text-2xl mb-10">
      Sorry, we couldn't find the page you were looking for.
    </p>
    <a
      href="/"
      class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
    >
      Go back home
    </a>
  </div>
</MainLayout>
